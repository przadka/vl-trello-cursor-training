// hooks/useBoard.ts
export const useBoard = (boardId: string) => {
  const { board, isLoading } = useBoardStore();
  
  useEffect(() => {
    if (boardId) {
      useBoardStore.getState().loadBoard(boardId);
    }
  }, [boardId]);

  return { board, isLoading };
};
